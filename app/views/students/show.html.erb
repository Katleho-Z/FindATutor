<div class="text-center student-show">
  <div class="student-profile">
    <div class="d-flex justify-content-between">
      <div>
        <% if @student.photo.key? %>
          <%= cl_image_tag @student.photo.key, :height=>"200", :width=>"200", :crop=>"fill", class: "img-fluid rounded-circle" %>
        <% else %>
          <%= image_tag("tutors/avatar.jpeg", class: "profile-picture img-fluid rounded-circle", fallback: "default_profile_picture.jpg") %>
        <% end %>
        <br>
        <br>
        <h2><%= @student.first_name %> <%= @student.last_name %></h2>
        <div class="student-details">
          <p><strong>Contact:</strong> <%= @student.phone_number %></p>
        </div>
        <br>
        <%= link_to 'Back', student_path(@student), class: "btn btn-secondary" %>
      </div>
      <div class="d-flex align-items-center">
        <div class="student-bio">
          <h3>About Me</h3>
          <p><%= @student.bio %></p>
        </div>
      </div>
    </div>
  </div>
</div>
