<div class="login-container">
    <div class="form-column">
      <div id="signup-section">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <h2>Create Your Account</h2>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%# <%= f.input :student, as: :boolean if devise_mapping.rememberable? %>
            <%# <%= f.input :tutor, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-submit" %>
          </div>
        <% end %>
        <div class="form-toggle">
          <p>Already have an account? <a class="btn btn-submit" href="#login-section">Log in</a></p>
        </div>
      </div>
    </div>
  </div>
